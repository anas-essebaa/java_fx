<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" fx:controller="com.example.javafx_project.controllers.AddSupplierController">
        <Label text="Add Owner" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
        </padding>

        <GridPane >

                <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="CIN" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="cinField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        </GridPane>

        <Button text="Add" fx:id="addButton" onAction="#handleAddButtonAction" />

</VBox>
