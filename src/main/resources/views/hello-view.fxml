<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_project.controllers.SignUpController" >

    <!-- Beginning of the left part of the Borderpane -->
    <left>

        <!-- An AnchorPane in the Left BorderPane -->
        <AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #A9A9A9;" BorderPane.alignment="CENTER">
            <children>

                <!-- Logo -->
                <ImageView fitHeight="600.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../com/example/javafx_project/sign.jpg" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </left>
    <!-- Ending of the left part of the Borderpane -->

    <!-- Beginning of the right part of the Borderpane -->
    <right>
        <AnchorPane prefHeight="700.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <Label layoutX="254.0" layoutY="132.0" prefHeight="30.0" prefWidth="120.0" style="-fx-text-fill: #A9A9A9;" text="Sign Up">
                <font>
                    <Font name="SansSerif Regular" size="30.0" />
                </font>
            </Label>

            <!-- Inputs -->
            <TextField fx:id="usernameField" layoutX="149.0" layoutY="275.0" prefHeight="30.0" prefWidth="301.0" promptText="Username " style="-fx-border-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
                <font>
                    <Font name="SansSerif Regular" size="14.0" />
                </font>
            </TextField>

            <TextField fx:id="emailField" layoutX="149.0" layoutY="213.0" prefHeight="30.0" prefWidth="301.0" promptText="Email" style="-fx-border-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
                <font>
                    <Font name="SansSerif Regular" size="14.0" />
                </font>
            </TextField>

            <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="336.0" prefHeight="30.0" prefWidth="300.0" promptText="Password" style="-fx-border-width: 2; -fx-border-color: #A9A9A9; -fx-border-radius: 5;">
                <font>
                    <Font name="SansSerif Regular" size="14.0" />
                </font>
            </PasswordField>



            <!-- Forgot your password button -->
            <Button fx:id="navigateLogin" onAction="#navigateLogin" layoutX="274.0" layoutY="499.0" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: black;" text="Login" underline="true">
                <font>
                    <Font size="15.0" />
                </font>
            </Button>

            <!-- Login Button -->
            <Button fx:id="LoginButton" onAction="#handleSignUpButton" layoutX="192.0" layoutY="419.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="214.0" style="-fx-background-color: #24a0ed; -fx-text-fill: white; -fx-border-radius: 5; -fx-border-width: 2; -fx-border-color: #24a0ed;" text="Create an account">
                <font>
                    <Font size="15.0" />
                </font>
            </Button>
        </AnchorPane>
    </right>
    <!-- Ending of the right part of the Borderpane -->

    <!-- Beginning of the bottom part of the Borderpane -->
    <bottom>


    </bottom>
    <!-- Ending of the bottom part of the Borderpane -->

</BorderPane>
